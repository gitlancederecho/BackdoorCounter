{
  "name": "backdoor-counter",
  "version": "1.0.0",
  "description": "The Backdoor Instagram follower counter",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.backdoor.counter",
    "productName": "BackdoorCounter",
    "files": [
      "**/*",
      "!node_modules",
      "server.py",
      "requirements.txt",
      ".venv/**/*",
      "assets/**/*",
      "display.html",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".venv",
        "to": ".venv"
      },
      {
        "from": "server.py",
        "to": "server.py"
      }
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "target": ["dmg","zip"]
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.6.0"
  }
}
